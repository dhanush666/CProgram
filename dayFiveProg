#include<stdio.h>

float ipFract() { 
float f; int n,d;
printf("input a fraction \n");
scanf("%d%d", &n, &d);
f=n/d;
return f;
}

float sumFract(float a, float b) {
float sum;
sum=a+b;
printf("sum of two fractions is %f ", sum);
return 0;
}

float inNFract(int n) {
int i,n1[100], d1[100];
float f[100];

for(int i=0;i<n;++i) {
printf("input numerators and denominators of fractions (n/d)...\n");
scanf("%d%d", &n1[i], &d1[i]);
f[i]=n1[i]/d1[i];
}
printf("the sum of the above n fractions is .. \n");
float sum=0;
for(i=0;i<n;++i) {
sum=sum+f[i];
}
printf("%d", sum);
}

int main() {
int ch,l;
printf("press 1 to add two fractions; 2 to add n number of fractions \n");
scanf("%d", &ch);
float x,y;
switch(ch) {
case 1 : 
x= ipFract();
y= ipFract();
          sumFract(x,y);
          break;
          
case 2 : 

printf("enter n \n");
scanf("%d", &l);
inNFract(l);
break;

default : printf("wrong choice \n");
}

return 0;

}
